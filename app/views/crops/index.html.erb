<h1>Crops</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Plant name</th>
      <th scope="col">Started at</th>
      <th scope="col">Ended at</th>
      <th scope="col">Quantity</th>
      <th scope="col">Area</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.plant_name %></td>
        <td><%= crop.started_at %></td>
        <td><%= crop.ended_at %></td>
        <td><%= crop.quantity %></td>
        <td><%= crop.area %></td>
        <td><%= link_to 'Show', crop %></td>
        <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
        <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

