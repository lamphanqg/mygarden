<p id="notice"><%= notice %></p>

<h1>Crops</h1>

<table>
  <thead>
    <tr>
      <th>Plant name</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Quantity</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.plant_name %></td>
        <td><%= crop.started_at %></td>
        <td><%= crop.ended_at %></td>
        <td><%= crop.quantity %></td>
        <td><%= crop.area %></td>
        <td><%= link_to 'Show', crop %></td>
        <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
        <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

